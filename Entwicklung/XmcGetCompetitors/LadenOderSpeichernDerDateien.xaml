<Window x:Class="XmcGetCompetitors.LadenOderSpeichernDerDateien"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LadenOderSpeichernDerDateien" Height="300" Width="300" 
    >
  <DockPanel Margin="5">
    <Button DockPanel.Dock="Top" Click="cmdOpen_Click">Laden Dateien</Button>
    <Button DockPanel.Dock="Bottom" Click="cmdSaveAs_Click">Speichern unter</Button>
    <ListBox Name="lstFiles" 
             SelectionMode="Single"
             SelectionChanged="lstFiles_SelectionChanged"></ListBox>
   </DockPanel>
</Window>
